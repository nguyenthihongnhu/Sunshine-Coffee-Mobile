<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    android:layout_width="160dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="#46A65732"
                android:id="@+id/itemsp_image"
                android:src="@drawable/ic_media_24"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <TextView
                android:gravity="center"
                android:id="@+id/itemsp_ten"
                android:layout_marginLeft="10dp"
                android:text="the sunshine coffee"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:id="@+id/itemsp_gia"
                android:text="VND: 2500000 Ä‘"
                android:textSize="16sp"
                android:textColor="#FF0101"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconnew_w512"
            android:layout_gravity="top|right"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>